{% extends 'base.html.twig' %}

{% block title %}Hello AnimeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! âœ…</h1>

    Anime List:
    <ul>
        {% for movie in anime %}
            <li><a href="{{ path('anime_player', {'id': movie.kodikId}) }}">{{ movie.name }}</a></li>
        {% endfor %}
    </ul>

    Categories List:
    <ul>
        {% for category in categories %}
            <li>{{ category.name }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
